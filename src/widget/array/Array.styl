@require 'melon/css/BoxGroup'

.ui-field-array
    padding-bottom: 2.5em

    >.ui-validity
        top: initial;
        bottom: 0;
        left: 0;
        white-space: normal;

    &-title
        display: flex
        align-items: center
        height: 2em

        >label
            flex: 1 1 auto

    &-footer
        padding-bottom: 2em;

    &-item

        &.state-collapsed
            height: 3em
            overflow: hidden;

        &-title
            display: flex
            flex: 1 1 auto;
            align-items: center
            box-sizing: border-box;
            padding: 0.5em 0 0.5em

            >label
                flex: 1 1 auto;

            >.ui-button
                opacity: 0

            &:hover >.ui-button
                opacity: 1
